\ProvidesPackage{monte-carlo-glossary}

\newglossaryentry{Energia Radiante}{
	name={Energia Radiante},
	description={Energia aggregata di tutti i fotoni in una radiazione elettromagnetica},
	symbol={\ensuremath{Q_e}}
}
		
\newglossaryentry{Flusso Radiante}{ 
	name={Flusso Radiante}, 
	description={Energia Radiante \textit{emessa, riflessa, trasmessa, incidente}, per unit`a di tempo}, 
	symbol={\ensuremath{\Phi_e}} 
}

\newglossaryentry{Intensita Radiante}{ 
	name={Intensit\`a Radiante}, 
	description={Flusso Radiante emesso, riflesso, trasmesso, per unit\`a di angolo solido}, 
	symbol={\ensuremath{I_{e,\Omega}}}
}

\newglossaryentry{Irradianza}{ 
	name={Irradianza}, 
	description={Flusso Radiante incidente per unit\`a di area}, 
	symbol={\ensuremath{E_e}}
}
\newglossaryentry{Emittanza Radiante}{ 
	name={Emittanza Radiante}, 
	description={Flusso Radiante emesso per unit\`a di area}, 
	symbol={\ensuremath{M_e}}
}

\newglossaryentry{Radiosita}{ 
	name={Radiosit\`a}, 
	description={Flusso Radiante \textit{uscente} (emesso, riflesso e trasmesso) per unit\`a di area}, 
	symbol={\ensuremath{J_e}} 
}

\newglossaryentry{Radianza}{ 
	name={Radianza}, 
	description={Flusso Radiante emesso, riflesso, trasmesso, incidente da/su una superficie, per unit\`a di angolo solido per unit\`a di 
				 \textit{area proiettata}}, 
	symbol={\ensuremath{L_{e,\Omega}}}
}
