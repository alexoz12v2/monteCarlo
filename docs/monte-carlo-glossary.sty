\ProvidesPackage{monte-carlo-glossary}

\newglossaryentry{Energia Radiante}{
	name={Energia Radiante},
	description={Energia aggregata di tutti i fotoni in una radiazione elettromagnetica. Misurata in $\si{J}$},
	symbol={\ensuremath{Q_e}}
}
		
\newglossaryentry{Flusso Radiante}{ 
	name={Flusso Radiante}, 
	description={Energia Radiante \textit{emessa, riflessa, trasmessa, incidente}, per unit`a di tempo. Misurata in $\si{W}$}, 
	symbol={\ensuremath{\Phi_e}} 
}

\newglossaryentry{Intensita Radiante}{ 
	name={Intensit\`a Radiante}, 
	description={Flusso Radiante emesso, riflesso, trasmesso, per unit\`a di angolo solido. Misurata in $\si{W/sr}$}, 
	symbol={\ensuremath{I_{e,\Omega}}}
}

\newglossaryentry{Irradianza}{ 
	name={Irradianza}, 
	description={Flusso Radiante incidente per unit\`a di area. Misurata in $\si{W/m^2}$}, 
	symbol={\ensuremath{E_e}}
}
\newglossaryentry{Emittanza Radiante}{ 
	name={Emittanza Radiante}, 
	description={Flusso Radiante emesso per unit\`a di area. Misurata in $\si{W/m^2}$}, 
	symbol={\ensuremath{M_e}}
}

\newglossaryentry{Radiosita}{ 
	name={Radiosit\`a}, 
	description={Flusso Radiante \textit{uscente} (emesso, riflesso e trasmesso) per unit\`a di area. Misurata in $\si{W/m^2}$}, 
	symbol={\ensuremath{J_e}} 
}

\newglossaryentry{Radianza}{ 
	name={Radianza}, 
	description={Flusso Radiante emesso, riflesso, trasmesso, incidente da/su una superficie, per unit\`a di angolo solido per unit\`a di 
				 \textit{area proiettata}. Misurata in $\si{W/(m^2\cdot sr)}$}, 
	symbol={\ensuremath{L_{e,\Omega}}}
}

\newglossaryentry{Energia Luminosa}{
	name={Energia Luminosa},
	description={Energia trasportata dalla luce percepita da un osservatore umano. Misurata in $\si{lm\cdot s}$},
	symbol={\ensuremath{Q_v}}
}

\newglossaryentry{Flusso Luminoso}{
	name={Flusso Luminoso},
	description={Misura la potenza della luce percepita da un osservatore umano. Misurata in $\si{lm}$},
	symbol={\ensuremath{\Phi_v}}
}

\newglossaryentry{Luminanza}{
	name={Luminanza},
	description={misura dell'intensit\`a luminosa per unita di area di luce che \`e emessa, incidente, trasmessa, riflessa, passa attraverso 
				una particolare direzione. Misurata in \si{cd/m^2}},
	symbol={\ensuremath{Y}}
}

\newglossaryentry{Illuminanza}{
	name={Illuminanza},
	description={Flusso luminoso incidente una superficie per unit\`a di area, irradianza spettrale pesata sulla percezione umana. 
				Si misura in $\si{lx}$},
	symbol={\ensuremath{E_v}}
}

\newglossaryentry{Emittanza Luminosa}{
	name={Emittanza Luminosa},
	description={Flusso luminoso emesso da una superficie per unit\`a di area, emittanza radiante spettrale pesata sulla percezione umana. 
				Si misura in $\si{lx}$},
	symbol={\ensuremath{M_v}}
}

\newglossaryentry{Intensita Luminosa}{
	name={Intensit\`a Luminosa},
	description={Misura della intensit\`a radiante spettrale pesata sulla percezione umana. Misurata in $\si{cd}$},
	symbol={\ensuremath{I_v}}
}

\newglossaryentry{Reflectance}{
	name={Reflectance},
	description={Per una data radiazione con data SPD, polarizzazione, geometria: Rapporto tra flusso radiante o luminoso riflesso e 
		flusso radiante o riflesso incidente. Nel primo caso, le grandezze possono essere spettrali o cumulative. Misura adimensionale},
	symbol={\ensuremath{\rho}}
}

\newglossaryentry{Transmittance}{
	name={Trasmittance},
	description={Per una data radiazione con data SPD, polarizzazione, geometria: Rapporto tra flusso radiante o luminoso trasmesso e 
		flusso radiante o riflesso incidente, nelle date condizioni (come la lunghezza del percorso della radiazione nell mezzo che si considera).
		Nel primo caso, le grandezze possono essere spettrali o cumulative. Misura adimensionale},
	symbol={\ensuremath{\uptau}}
}

\newglossaryentry{Absorptance}{
	name={Absorptance},
	description={Rapporto tra flusso radiante o luminoso assorbito e flusso radiante o luminoso incidente in date condizioni (come la lunghezza 
		del percorso nel mezzo considerato)},
	symbol={\ensuremath{\alpha}}
}

\newglossaryentry{Reflectivity}{
	name={Reflectivity},
	description={(spectral) Reflectance di uno strato del materiale con spessore tale che non c'\`e cambiamento in Reflectance. 
		Cio\`e spessore tendente all'infinito (halfspace bulk material, materiale semi-infinito)},
	symbol={\ensuremath{\rho_\infty}}
}

\newglossaryentry{Transmissivity}{
	name={Trasmissivity},
	description={Per un materiale assorbente: (spectral) Transmittance interna di uno strato di materiale tale che il percorso della radiazione 
		all'interno del mezzo sia di lunghezza unitaria, senza incontrare ostacoli. Per "interna" si intende non riferita alla sola interfaccia},
	symbol={\ensuremath{\uptau_u}}
}

\newglossaryentry{Absorptivity}{
	name={Absorptivity},
	description={Per un materiale assorbente: (spectral) Absorptance di uno strato di materiale tale che il percorso della radiazione 
		all'interno del mezzo sia di lunghezza unitaria, senza incontrare ostacoli.},
	symbol={\ensuremath{\alpha_u}}
}

\newglossaryentry{BSSRDF}{
	name={Bidirectional Scattering-Surface Reflectance Distribution Function},
	description={Esprime la proporzione tra flusso radiante (spettrale) riflesso da $\vec{p_o}$ in direzione $\hat{\omega_o}$ e 
		il flusso radiante (spettrale) incidente in $\vec{p_i}$ dalla direzione $\hat{\omega_i}$. Misurata in $\si{Wm^{-2}sr^{-1}}$},
	symbol={\ensuremath{S}}
}

\newglossaryentry{BRDF}{
	name={Bidirectional Reflectance Distribution Function},
	description={Esprime la proporzione tra irradianza (spettrale) incidente nel punto $\vec{p}$ da un angolo solido centrato 
		in $\hat{\omega_i}$ e radianza (spettrale) riflessa in direzione $\hat{\omega_o}$. Misurata in $\si{sr^{-1}}$},
	symbol={\ensuremath{f_r}}
}
